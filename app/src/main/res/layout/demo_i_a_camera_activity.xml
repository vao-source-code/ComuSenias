<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo_camera.DemoIACamera"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white">



    <Button
        android:id="@+id/camera_button"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:background="#949db7"
        android:fontFamily="sans-serif-black"
        android:text="Deteccion en tiempo real"
        android:textAllCaps="false"
        android:textColor="@color/black"

        />

    <Button
        android:id="@+id/word_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#949db7"
        android:fontFamily="sans-serif-black"
        android:text="Capturar letras y palabras"
        android:textAllCaps="false"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textAllCaps="false"
        android:textSize="40dp"
        android:textColor="#949DB7"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="serif-monospace"
        android:text="Demo para la MVP1"
        android:textAllCaps="false"
        android:textColor="#949DB7"
        android:textAlignment="center"
        android:textSize="12dp"
        android:textStyle="bold" />


</LinearLayout>